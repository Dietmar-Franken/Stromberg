<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.repictures.stromberg.TransfersActivity"
    android:id="@+id/transfer_fragment_coordinator_layout">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/transfer_fragment_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/transfer_fragment_owner_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/transfer_fragment_accountnumber_input_layout"
            android:layout_toStartOf="@+id/transfer_fragment_accountnumber_input_layout"
            android:paddingBottom="4dp"
            android:paddingRight="8dp">

            <AutoCompleteTextView
                android:id="@+id/transfer_fragment_owner_auto_complete_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="@string/optionee"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/transfer_fragment_accountnumber_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="8dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/transfer_fragment_accountnumber_auto_complete_text"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:inputType="number"
                android:maxLength="4"
                android:hint="@string/accountnumber_short"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/transfer_fragment_amount_layout"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/transfer_fragment_owner_input_layout"
            android:layout_marginTop="8dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/transfer_fragment_amount_edit_text"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:hint="@string/amount"
                android:inputType="numberDecimal"
                android:paddingBottom="@dimen/activity_horizontal_margin" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/transfer_fragment_currency"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/transfer_fragment_amount_layout"
            android:layout_below="@+id/transfer_fragment_owner_input_layout"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/transfer_fragment_amount_layout"
            android:layout_toRightOf="@+id/transfer_fragment_amount_layout"
            android:gravity="center"
            android:text="@string/currency" />

        <CheckBox
            android:id="@+id/transfer_fragment_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/transfer_fragment_amount_layout"
            android:layout_marginTop="8dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/execute_later" />

        <TextView
            android:id="@+id/transfer_fragment_execute_at_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transfer_fragment_check_box"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:text="@string/execute_at" />

        <TextView
            android:id="@+id/transfer_fragment_date_spinner"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/transfer_fragment_execute_at_text"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/transfer_fragment_time_spinner"
            android:layout_toStartOf="@+id/transfer_fragment_time_spinner"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textSize="18sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/transfer_fragment_date_spinner"
            android:layout_alignRight="@+id/transfer_fragment_date_spinner"
            android:layout_below="@+id/transfer_fragment_date_spinner"
            android:background="@color/light_grey"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/transfer_fragment_time_spinner"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/transfer_fragment_date_spinner"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textSize="18sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/transfer_fragment_time_spinner"
            android:layout_alignLeft="@+id/transfer_fragment_time_spinner"
            android:layout_alignRight="@+id/transfer_fragment_time_spinner"
            android:layout_alignStart="@+id/transfer_fragment_time_spinner"
            android:layout_below="@+id/transfer_fragment_time_spinner"
            android:layout_toRightOf="@+id/transfer_fragment_date_spinner"
            android:layout_marginRight="16dp"
            android:background="@color/light_grey" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/transfer_fragment_purpose_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/transfer_fragment_date_spinner"
            android:layout_marginTop="16dp"
            android:paddingBottom="4dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/transfer_fragment_purpose_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="@string/purpose" />
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>