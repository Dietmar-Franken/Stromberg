<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/product_card"
    android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_layout"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/auth_scan_progressbar"
                    android:layout_margin="16dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:paddingTop="16dp"
                    android:layout_toRightOf="@+id/auth_scan_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/error"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textSize="24sp"
                    android:id="@+id/auth_scan_title"/>

                <TextView
                    android:layout_toRightOf="@+id/auth_scan_progressbar"
                    android:layout_below="@+id/auth_scan_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/error"
                    android:paddingBottom="16dp"
                    android:textSize="14sp"
                    android:id="@+id/auth_scan_vendor"/>

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/auth_scan_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:indeterminate="true"
                android:padding="31dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_second_element"
                android:layout_below="@+id/auth_scan_progress_bar"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/more_results"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textSize="24sp"
                    android:id="@+id/product_second_title"/>

                <TextView
                    android:layout_below="@+id/product_second_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/swipe_to_view"
                    android:textSize="14sp"
                    android:id="@+id/product_second_description"/>

            </RelativeLayout>
        </RelativeLayout>
</android.support.v7.widget.CardView>